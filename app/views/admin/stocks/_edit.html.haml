.remote
  = form_for([:admin, @stock], :html => one_submit_only(:stock).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_stock_path(@stock)

    = f.error_messages :object_name => t('stock')

    = render "admin/stocks/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_stock)
      #{t :or}
      = link_to_cancel edit_admin_stock_path(@stock)
