
= form_for([:admin, @product], :html => one_submit_only(:product).merge({:autocomplete => 'off'}), :remote => true) do |f|
  = link_to_close new_admin_product_path

  = f.error_messages :object_name => t('product')

  = render "admin/products/form", :f => f

  .buttonbar
    = f.submit t(:create_product)
    #{t :or}
    = link_to_cancel new_admin_product_path
