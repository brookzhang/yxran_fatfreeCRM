.remote
  = form_for([:admin, @stock_product], :html => one_submit_only(:stock_product).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_stock_stock_product_path(@stock_product)

    = f.error_messages :object_name => t('stock_product')

    = render "admin/stock_products/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_stock_product)
      #{t :or}
      = link_to_cancel edit_admin_stock_stock_product_path(@stock_product)
