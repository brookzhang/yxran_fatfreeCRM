id = dom_id(@stock_product)

if @stock_product.errors.empty?
  page[id].replace :partial => "stock_product", :collection => [ @stock_product ]
  page[id].visual_effect :highlight, :duration => 1.0
else
  page[id].replace_html :partial => "edit"
  page[id].visual_effect :shake, :duration => 0.25, :distance => 6
  page[:stock_product_name].focus
end
