.remote
  = form_for([:admin, @inventory], :html => one_submit_only(:inventory).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_inventory_path(@inventory)

    = f.error_messages :object_name => t('inventory')

    = render "admin/inventories/form", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_inventory)
      #{t :or}
      = link_to_cancel edit_admin_inventory_path(@inventory)
