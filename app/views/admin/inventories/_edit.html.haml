.remote
  = form_for([:admin,@warehouse, @inventory], :html => one_submit_only(:inventory).merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_warehouse_inventory_path(@warehouse, @inventory)

    = f.error_messages :object_name => t('inventory')

    .section
      %table
        %tr
          %td
            .label.top.req #{ @inventory.product.name}
            = f.text_field :quantity
            = @inventory.product.measurement

    
    
    .buttonbar
      = f.submit t(:save_inventory)
      #{t :or}
      = link_to_cancel edit_admin_warehouse_inventory_path(@warehouse, @inventory)
