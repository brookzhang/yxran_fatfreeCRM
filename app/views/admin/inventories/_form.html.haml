.section
  %table
    %tr
      %td
        .label.top.req #{t :inventory_name}:
        = f.text_field :name
    %tr
      %td
        .label.top.req #{t :inventory_remark}:
        = f.text_field :remark
    %tr
      %td
        .label.top.req #{t :inventory_status}:
        = f.radio_button :status , 1 ,:checked => true
        .label.top.noreq #{t :inventory_status_active}
        = f.radio_button :status , 0
        .label.top.noreq #{t :inventory_status_inactive}
        
